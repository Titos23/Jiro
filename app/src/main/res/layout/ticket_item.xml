<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPassengerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passenger Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDepartureCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departure City"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvArrivalCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arrival City"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvRandomStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Stop"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvSeatNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seat Number"
        android:textSize="16sp"/>

</LinearLayout>
