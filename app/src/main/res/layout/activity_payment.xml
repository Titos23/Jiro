<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Flight Overview Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flight Overview"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/passengerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passenger: Not Set"/>
        <TextView
            android:id="@+id/flightDepartureCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departure : Not Set"/>

        <TextView
            android:id="@+id/flightArrivalCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival : Not Set"/>

        <TextView
            android:id="@+id/flightDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: Not Set"/>

        <TextView
            android:id="@+id/randomStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop: None"/>

        <TextView
            android:id="@+id/seatNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seat Number: Not Assigned"/>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

        <!-- Billing Information Section -->

        <!-- Include billing fields as previously defined -->
        <!-- Passenger Name Input, Card Information, CVV, etc. -->
        <include layout="@layout/billing_information"/>
    </LinearLayout>
</ScrollView>
